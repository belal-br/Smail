<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".fragments.MainSettingFragment"
    android:background="@color/white"
    android:padding="5dp">

    <LinearLayout
        android:id="@+id/personalS"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="100dp"
        android:background="@drawable/border"
        android:padding="5dp">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image2"
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:src="@drawable/settingp"
            app:civ_border_width="2dp"
            app:civ_border_color="#044153"
            tools:ignore="MissingClass" />

        <TextView
            android:id="@+id/textView21"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Personal Details"
            android:textColor="#044153"
            android:textStyle="bold"
            android:textSize="20dp"
            android:fontFamily="monospace"
            android:gravity="center"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/contactUsS"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="50dp"
        android:background="@drawable/border"
        android:padding="5dp">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image3"
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:src="@drawable/cotact"
            app:civ_border_width="2dp"
            app:civ_border_color="#044153"
            tools:ignore="MissingClass" />

        <TextView
            android:id="@+id/textView22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Contact Us"
            android:textColor="#044153"
            android:textStyle="bold"
            android:textSize="20dp"
            android:fontFamily="monospace"
            android:gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/aboutUsS"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="50dp"
        android:background="@drawable/border"
        android:padding="5dp">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image4"
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:src="@drawable/about"
            app:civ_border_width="2dp"
            app:civ_border_color="#044153"
            tools:ignore="MissingClass" />

        <TextView
            android:id="@+id/textView23"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="About Us"
            android:textColor="#044153"
            android:textStyle="bold"
            android:textSize="20dp"
            android:fontFamily="monospace"
            android:gravity="center"/>
    </LinearLayout>

    <Button
        android:id="@+id/btn_logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:fontFamily="monospace"
        android:backgroundTint="#044153"
        android:layout_marginTop="100dp"
        android:layout_gravity="center"/>
</LinearLayout>